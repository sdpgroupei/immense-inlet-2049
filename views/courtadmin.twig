			<!-- Main -->
				<section id="main" class="container">
					<header>
						<h2>Gestion de vos courts</h2>
					</header>

					<div class="row">
						<div class="12u">

							<!-- Table -->
								<section class="box">
									<h3>Vos terrains</h3>
									<div class="table-wrapper">
										<h3>Vos terrains</h3>
										<p> Voici la liste des terrains que vous gérer pour les tournois. Vous pouvez décider de les supprimer, ou de les ajoutez au terrains que vous administrez. </p>
										{% if courts is empty %}
										<p> Pas de court dans la database ! </p>
										{% endif %}

										<table>
											<thead>
												<tr>
													<th>Addresse du Court </th>
													<th>Etat du terrain</th>
													<th>Surface</th>
													<th>Instructions</th>
													<th>Propiétaire email</th>
													<th>Interieur/Exterieur</th>
													<th>Samedi/Dimanche</th>
													<th>Supprimer</th>
													<th>Ne plus administrer</th>


												</tr>
											</thead>
											<tbody>
												{% for n in courts %}
												<tr>
												   <td>{{ n.court_address}}</td>
													 <td>{{ n.court_state}}</td>
													 <td>{{ n.surface_type}}</td>
													 <td>{{ n.court_instructions}}</td>
													 <td>{{ n.e_mail_address}}</td>
													 {% if n.isindoor == 1 %}
													 	<td>terrain couvert</td>
													 {% else %}
													 	<td>terrain exterieur</td>
													 {% endif %}
													 <td>{{ n.name}}</td>
													 <td> <a href="  {{ url('deletecourt', {id: n.idcourts}) }} " >Supprimer </a> </td>
													 <td> <a href="  {{ url('removefromcourt', {id: n.idcourts}) }} ">Enlever</a> </td>
												</tr>
												{% endfor %}
											</tbody>
											<tfoot>
												<tr>
													<td colspan="2"></td>
													<!-- <td>100.00</td> -->
												</tr>
											</tfoot>
										</table>

											<!-- <li>Pas de courts dans la database !</li> -->


