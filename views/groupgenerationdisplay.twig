				</nav>
			</header>

			<!-- Main -->
				<section id="main" class="container 90%">
					<header>
						<h2>Génération des groupes.</h2>
					</header>
					<div class="box">
						{% if not resultGroup is empty %}
							{% for group in resultGroup %}
								<div class="row">
									<div class="12u">
										<!-- Table -->
											<section class="box">
												<div class="table-wrapper">
													{% if group is empty %}
													<p> Groupe vide ! </p>
													{% endif %}
													Groupe : {{group.group_id}} joue sur le court # {{group.court_fk.idcourts}} à {{group.court_fk.court_address}}
													<table>
														<thead>
															<tr>
																<th>N° de la pair</th>
																<th>Représentant du groupe</th>
																<th>Prénom du premier joueur</th>
																<th>Nom du premier joueur</th>
																<th>Classement du premier joueur</th>
																<th>Prénom du deuxième joueur</th>
																<th>Nom du deuxième joueur</th>
																<th>Classement du deuxième joueur</th>
															</tr>
														</thead>
														<tbody>
															{% for n in group.pairs %}
															<tr>
																<td>{{ n.idpairs}}</td>
																<td>
																	{% if n.idpairs == group.leader %}
    																LEADER
																	{% endif %}
																</td>
																<td>{{ n.joueur1.first_name}}</td>
																<td>{{ n.joueur1.last_name}}</td>
																<td>{{ n.joueur1.ranking}}</td>
																<td>{{ n.joueur2.first_name}}</td>
																<td>{{ n.joueur2.last_name}}</td>
																<td>{{ n.joueur2.ranking}}</td>
															</tr>
															{% endfor %}
														</tbody>
														<tfoot>
															<tr>
																<td colspan="2"></td>
																<!-- <td>100.00</td> -->
															</tr>
														</tfoot>
													</table>

														<!-- <li>Pas de groupes dans la database !</li> -->
												</div>
											</section>

									</div>

							</div>

							{% endfor %}
							{% else %}
							 <p>La génération n'a pas fonctionnée !</p>
							{% endif %}
					</div>
				</section>

